        <Button x:Name="logButton" Content="Войти" HorizontalAlignment="Left" Margin="355,292,0,0" VerticalAlignment="Top" Width="76"/>
        <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="380" Margin="261,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="1"/>
